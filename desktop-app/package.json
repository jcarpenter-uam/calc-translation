{
  "name": "calc-zoom-translation-desktop",
  "version": "1.0.8-desktop",
  "description": "A desktop app for the Zoom Translation web app",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --win",
    "publish": "electron-builder --win --publish always"
  },
  "keywords": [],
  "author": "Jonah Carpenter",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "calc-zoom-translation-desktop",
    "productName": "CALC Zoom Translation",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "assets/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "jcarpenter-uam",
      "repo": "zoom-translation"
    }
  }
}
