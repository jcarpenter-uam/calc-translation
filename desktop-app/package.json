{
  "name": "calc-zoom-translation-desktop",
  "version": "1.0.9-desktop",
  "description": "A desktop app for the Zoom Translation web app",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "publish": "npm run build && electron-builder -w --publish always"
  },
  "keywords": [],
  "author": "Jonah Carpenter",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@eslint/js": "^9.38.0",
    "@tailwindcss/vite": "^4.1.16",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react-swc": "^4.2.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "eslint": "^9.38.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "tailwindcss": "^4.1.16",
    "vite": "^7.1.12"
  },
  "build": {
    "appId": "calc-zoom-translation-desktop",
    "productName": "CALC Zoom Translation",
    "win": {
      "target": "nsis",
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "out/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "jcarpenter-uam",
      "repo": "zoom-translation"
    }
  }
}
